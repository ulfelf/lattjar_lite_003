<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/video_guide_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/video_guide_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/text_guide_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/text_guide_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/video_guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />/>

    <android.support.constraint.Guideline
        android:id="@+id/video_guide_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <TextView
        android:id="@+id/text_instructions"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHeight_default="wrap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/instruction"
        app:layout_constraintBottom_toTopOf="@+id/video_guide_bottom"
        app:layout_constraintEnd_toStartOf="@+id/text_guide_right"
        app:layout_constraintStart_toStartOf="@+id/text_guide_left"
        app:layout_constraintTop_toTopOf="@+id/video_guide_top" />

    <VideoView
        android:id="@+id/video"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHeight_default="wrap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/video_guide_bottom"
        app:layout_constraintEnd_toStartOf="@+id/video_guide_right"
        app:layout_constraintStart_toStartOf="@+id/video_guide_left"
        app:layout_constraintTop_toTopOf="@+id/video_guide_top" />

    <ImageButton
        android:id="@+id/ib_instrument_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/video_guide_right"
        app:layout_constraintStart_toStartOf="@+id/video_guide_left"
        app:layout_constraintTop_toTopOf="@+id/video_guide_bottom"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/ib_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_guide_right"
        app:layout_constraintStart_toStartOf="@+id/text_guide_left"
        app:layout_constraintTop_toTopOf="@+id/video_guide_bottom"
        app:srcCompat="@mipmap/ic_launcher_round" />

    />
</android.support.constraint.ConstraintLayout>